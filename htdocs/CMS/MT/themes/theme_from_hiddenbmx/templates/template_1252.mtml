<div class="widget-blogs widget">
<h3 class="widget-header">Blogs</h3>
  <div id="scroll-wrp" class="widget-content">
<mt:IfNonZero tag="BlogEntryCount" exclude_blogs="4,6,1,20">
<mt:Entries lastn="7" exclude_blogs="4,6,1,20">
<mt:EntriesHeader>  
  <ul style="overflow:auto;">
  </mt:EntriesHeader>
  <li>
  <a href="<$mt:EntryPermalink$>">
    <span class="img">
    <mt:Pages>
    <MTPageAssets>
<img src="<$MTAssetThumbnailURL height="60"$>" />
</MTPageAssets>
    </mt:Pages>
    </span>
    <span class="wrp">
    <span class="name"><$mt:BlogName$></span>
    <span class="date"><$mt:EntryDate language="en" format="%Y %B,%d"$></span>
    <span class="title"><$mt:EntryTitle$></span>
    </span>
  </a>
  </li>
  <mt:EntriesFooter>
  </ul>
  </mt:EntriesFooter>
</mt:Entries>
</mt:IfNonZero>
  
  </div>
</div>